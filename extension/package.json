{
  "name": "mermaidlens-extension",
  "displayName": "MermaidLens",
  "description": "Inline Mermaid diagrams for Markdown preview with themes and presets.",
  "version": "0.2.4",
  "publisher": "mermaidlens",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sraphaz/mermaidLens.git"
  },
  "bugs": "https://github.com/sraphaz/mermaidLens/issues",
  "homepage": "https://github.com/sraphaz/mermaidLens#readme",
  "engines": {
    "vscode": "^1.85.0"
  },
  "icon": "media/icone.png",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:markdown",
    "onCommand:mermaidlens.refresh",
    "onCommand:mermaidlens.showWelcome",
    "onCommand:mermaidlens.editDiagram",
    "onCommand:mermaidlens.viewWithMermaidLens"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "markdown.markdownItPlugins": true,
    "markdown.previewScripts": [
      "./media/mermaid.min.js",
      "./media/mermaid-init.js"
    ],
    "commands": [
      {
        "command": "mermaidlens.refresh",
        "title": "MermaidLens: Refresh Preview"
      },
      {
        "command": "mermaidlens.showWelcome",
        "title": "MermaidLens: Show Welcome Page",
        "category": "MermaidLens"
      },
      {
        "command": "mermaidlens.editDiagram",
        "title": "MermaidLens: Edit Diagram",
        "category": "MermaidLens"
      },
      {
        "command": "mermaidlens.viewWithMermaidLens",
        "title": "View with MermaidLens",
        "category": "MermaidLens"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "mermaidlens.viewWithMermaidLens",
          "when": "editorLangId == markdown",
          "group": "1_navigation"
        }
      ],
      "editor/context": [
        {
          "command": "mermaidlens.viewWithMermaidLens",
          "when": "editorLangId == markdown",
          "group": "1_open"
        }
      ],
      "explorer/context": [
        {
          "command": "mermaidlens.viewWithMermaidLens",
          "when": "resourceLangId == markdown",
          "group": "1_open"
        }
      ]
    },
    "configuration": {
      "title": "MermaidLens",
      "properties": {
        "mermaidlens.theme": {
          "type": "string",
          "default": "ocean",
          "description": "Theme id to use for Mermaid rendering."
        },
        "mermaidlens.preset": {
          "type": "string",
          "default": "none",
          "description": "Preset id to apply to Mermaid directives. Use 'none' to avoid init blocks that can cause 'No diagram type detected'."
        },
        "mermaidlens.diagramOnHover": {
          "type": "boolean",
          "default": false,
          "description": "When enabled, show a 'View diagram' placeholder; hovering reveals the diagram. When false (default), diagrams are always shown inline and clickable to edit."
        }
      }
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json"
  },
  "dependencies": {
    "@mermaidlens/core": "0.1.0",
    "markdown-it": "^14.1.0",
    "mermaid": "^11.0.0"
  },
  "devDependencies": {
    "@types/markdown-it": "^13.0.7",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.4.5"
  }
}
