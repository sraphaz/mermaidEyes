{
  "name": "mermaideyes-extension",
  "displayName": "MermaidEyes",
  "description": "Inline Mermaid diagrams for Markdown preview with themes and presets.",
  "version": "0.2.11",
  "publisher": "sraphaz",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sraphaz/mermaidEyes.git"
  },
  "bugs": "https://github.com/sraphaz/mermaidEyes/issues",
  "homepage": "https://github.com/sraphaz/mermaidEyes#readme",
  "engines": {
    "vscode": "^1.85.0"
  },
  "icon": "media/icone.png",
  "categories": [
    "Other"
  ],
  "keywords": [
    "mermaid",
    "markdown",
    "diagram",
    "preview",
    "flowchart",
    "sequence",
    "visualization"
  ],
  "galleryBanner": {
    "color": "#1e3a5f",
    "theme": "dark"
  },
  "markdown": "github",
  "readme": "README.md",
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:markdown",
    "onCommand:mermaideyes.refresh",
    "onCommand:mermaideyes.showWelcome",
    "onCommand:mermaideyes.editDiagram",
    "onCommand:mermaideyes.viewWithMermaidEyes"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "markdown.markdownItPlugins": true,
    "markdown.previewScripts": [
      "./media/mermaid.min.js",
      "./media/mermaid-init.js"
    ],
    "commands": [
      {
        "command": "mermaideyes.refresh",
        "title": "MermaidEyes: Refresh Preview"
      },
      {
        "command": "mermaideyes.showWelcome",
        "title": "MermaidEyes: Show Welcome Page",
        "category": "MermaidEyes"
      },
      {
        "command": "mermaideyes.editDiagram",
        "title": "MermaidEyes: Edit Diagram",
        "category": "MermaidEyes"
      },
      {
        "command": "mermaideyes.viewWithMermaidEyes",
        "title": "View with MermaidEyes",
        "category": "MermaidEyes"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "mermaideyes.viewWithMermaidEyes",
          "when": "editorLangId == markdown",
          "group": "1_navigation"
        }
      ],
      "editor/context": [
        {
          "command": "mermaideyes.viewWithMermaidEyes",
          "when": "editorLangId == markdown",
          "group": "1_open"
        }
      ],
      "explorer/context": [
        {
          "command": "mermaideyes.viewWithMermaidEyes",
          "when": "resourceLangId == markdown",
          "group": "1_open"
        }
      ]
    },
    "configuration": {
      "title": "MermaidEyes",
      "properties": {
        "mermaideyes.theme": {
          "type": "string",
          "default": "ocean",
          "description": "Theme id to use for Mermaid rendering."
        },
        "mermaideyes.preset": {
          "type": "string",
          "default": "none",
          "description": "Preset id to apply to Mermaid directives. Use 'none' to avoid init blocks that can cause 'No diagram type detected'."
        },
        "mermaideyes.diagramOnHover": {
          "type": "boolean",
          "default": true,
          "description": "When true (default), hovering over Mermaid code in the editor shows the rendered diagram. When false, no hover. Preview always shows diagramsâ€”unaffected."
        }
      }
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json"
  },
  "dependencies": {
    "@mermaideyes/core": "0.1.0",
    "markdown-it": "^14.1.0",
    "mermaid": "^11.0.0"
  },
  "devDependencies": {
    "@types/markdown-it": "^13.0.7",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.4.5"
  }
}
