{
  "name": "mermaideyes",
  "private": true,
  "version": "0.2.7",
  "repository": {
    "type": "git",
    "url": "https://github.com/sraphaz/mermaidEyes.git"
  },
  "bugs": "https://github.com/sraphaz/mermaidEyes/issues",
  "homepage": "https://github.com/sraphaz/mermaidEyes#readme",
  "workspaces": [
    "packages/*",
    "extension"
  ],
  "scripts": {
    "build": "tsc -b && node scripts/copy-assets.js",
    "build:extension": "cd extension && npm run build",
    "clean": "rimraf extension/dist packages/core/dist coverage extension/packages extension/node_modules",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "package:vsix": "npm run build && npx rimraf extension/node_modules && node scripts/prepack-for-vsce.mjs && cd extension && npx @vscode/vsce package --no-dependencies"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@vscode/vsce": "^3.2.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.4.5",
    "vitest": "^1.4.0"
  }
}
