{
  "name": "mermaidlens",
  "private": true,
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/sraphaz/mermaidLens.git"
  },
  "bugs": "https://github.com/sraphaz/mermaidLens/issues",
  "homepage": "https://github.com/sraphaz/mermaidLens#readme",
  "workspaces": [
    "packages/*",
    "extension"
  ],
  "scripts": {
    "build": "tsc -b && node scripts/copy-assets.js",
    "build:extension": "cd extension && npm run build",
    "clean": "rimraf extension/dist packages/**/dist coverage extension/packages",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "rimraf": "^5.0.5",
    "typescript": "^5.4.5",
    "vitest": "^1.4.0"
  }
}
